generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String              @id @default(cuid())
  email         String              @unique
  emailVerified Boolean             @default(false)
  name          String
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  accounts      Account[]
  sessions      Session[]
  verification  VerificationToken[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  providerId    String
  accountId     String
  password      String?
  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([providerId, accountId])
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String?

  @@unique([identifier, token])
}

enum SystemRole {
  ADMIN
  DIRECTOR
  STUDENT_UNION
}

model SystemRoleGrant {
  id        String     @id @default(cuid())
  email     String
  role      SystemRole
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([email, role])
}

model Club {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roleGrants ClubRoleGrant[]
  proposals   Proposal[]
}

enum ClubRole {
  PRESIDENT
  VP
  SECRETARY
}

model ClubRoleGrant {
  id        String   @id @default(cuid())
  club      Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  clubId    String
  email     String
  role      ClubRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([clubId, role])
  @@unique([clubId, email, role])
}

// Core proposal - minimal essential info
model Proposal {
  id                String           @id @default(cuid())
  clubId            String
  club              Club             @relation(fields: [clubId], references: [id], onDelete: Cascade)
  submittedBy       String           // President's email
  
  // Relations to normalized data
  event             Event?           @relation
  eventId           String?          @unique
  contacts          ProposalContact[]
  reviews           ProposalReview[]
  collaborators     ProposalCollaborator[]
  guests            ProposalGuest[]
  leadApprovals     ProposalLeadApproval[]
  
  // Status tracking
  status            ProposalStatus   @default(PENDING)
  resubmissionCount Int              @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clubId, status])
  @@index([submittedBy])
}

// Event details - extracted from Proposal
model Event {
  id                String   @id @default(cuid())
  proposalId        String   @unique
  proposal          Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  
  title             String
  description       String
  location          String
  startTime         DateTime
  endTime           DateTime
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Contact information - extracted from Proposal
model ProposalContact {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  
  role       ContactRole
  name       String
  email      String?
  mobile     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([proposalId, role])
}

// External collaborators - normalized from JSON
model ProposalCollaborator {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  
  name       String
  type       String   // "Organization", "Club", "Department", etc.
  
  createdAt DateTime @default(now())
}

// Invited guests - normalized from JSON
model ProposalGuest {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  
  name       String
  affiliation String?
  reason     String?
  
  createdAt DateTime @default(now())
}

// Review process - extracted from Proposal
model ProposalReview {
  id         String     @id @default(cuid())
  proposalId String
  proposal   Proposal   @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  
  reviewerRole ReviewRole
  reviewerEmail String
  recommendation String? // "Recommended" or "Not Recommended"
  comments      String?
  approved      Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([proposalId, reviewerRole])
}

// Enums for the new models
enum ContactRole {
  PRESIDENT
  VICE_PRESIDENT
  SECRETARY
}

enum ReviewRole {
  STUDENT_UNION
  DIRECTOR
}

// Lead approval tracking
model ProposalLeadApproval {
  id         String     @id @default(cuid())
  proposalId String
  proposal   Proposal   @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  
  leadRole   ClubRole   // PRESIDENT or VP
  leadEmail  String     // Email of the lead who reviewed
  approved   Boolean    @default(false)
  comments   String?
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([proposalId, leadRole])
}

enum ProposalStatus {
  LEAD_REVIEW
  LEAD_APPROVED
  LEAD_REJECTED
  PENDING
  SU_APPROVED
  SU_REJECTED
  DIRECTOR_APPROVED
  DIRECTOR_REJECTED
  RESUBMISSION_REQUIRED
}
